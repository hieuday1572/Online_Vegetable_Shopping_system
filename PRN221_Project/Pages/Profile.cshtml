@page
@model ProfileModel
@{
    Layout = "/Pages/Shared/_UserLayout.cshtml";
}
<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span class="font-weight-bold">Edogaru</span><span class="text-black-50">edogaru@mail.com.my</span><span> </span></div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3 mt-4">
                    <h4 class="text-right">User Profile</h4>
                    @if (TempData["success"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success!</strong> @TempData["success"]
                        </div>
                    }
                </div>
                <form method="post">
                    <input type="hidden" asp-for="Customer.CustomerId" />
                    <input type="hidden" asp-for="Customer.Password" />
                <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Full Name</label><input type="text" class="form-control" placeholder="@Model.Customer.FullName" asp-for="Customer.FullName"><span asp-validation-for="Customer.FullName" class="text-danger"></span></div>
                        <div class="col-md-6"><label class="labels">Birthday</label><input type="datetime" class="form-control" placeholder="@Model.Customer.Birthday" asp-for="Customer.Birthday"><span asp-validation-for="Customer.Birthday" class="text-danger"></span></div>
                </div>
                <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Mobile Number</label><input type="text" class="form-control" placeholder="@Model.Customer.Phone" asp-for="Customer.Phone"><span asp-validation-for="Customer.Phone" class="text-danger"></span></div>
                    <div class="col-md-12"><label class="labels">Email</label><input type="text" class="form-control" placeholder="@Model.Customer.Email" readonly asp-for="Customer.Email"></div>
                        <div class="col-md-12"><label class="labels">Address</label><input type="text" class="form-control" placeholder="@Model.Customer.Address" asp-for="Customer.Address"><span asp-validation-for="Customer.Address" class="text-danger"></span></div>
                        <div class="col-md-12">
                            <label class="labels">Location</label><select asp-for="Customer.LocationId" class="form-control" asp-items="ViewBag.LocationIdForEdit">
                            </select>
                        </div>
                        <div class="col-md-12"><label class="labels">District</label><input type="text" class="form-control" placeholder="@Model.Customer.District" asp-for="Customer.District"></div>
                        <div class="col-md-12"><label class="labels">Ward</label><input type="text" class="form-control" placeholder="@Model.Customer.Ward" asp-for="Customer.Ward"></div>
                        <div class="col-md-12"><label class="labels">CreateDate</label><input type="text" class="form-control" placeholder="@Model.Customer.CreateDate" readonly asp-for="Customer.CreateDate"></div>
                        <div class="col-md-12"><label class="labels">LastLogin</label><input type="text" class="form-control" placeholder="@Model.Customer.LastLogin" readonly asp-for="Customer.LastLogin"></div>
                </div>
                <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Save Profile</button></div>
                </form>
            </div>
        </div>
    </div>
</div>