@page
@model PRN221_Project.Pages.ADMIN.Manage_Customer.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/ADMIN/Shared/_ADMINLayout.cshtml";
}

<h1 class="text-primary">Details</h1>

<div>
    <h4 class="text-primary">Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>
        <dt class="col-sm-2">
            Birthday
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Birthday)
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Address)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Email)
        </dd>      
        <dt class="col-sm-2">
            Phone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Phone)
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Location.Name)
        </dd>
        <dt class="col-sm-2">
            District
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.District)
        </dd>
        <dt class="col-sm-2">
            Ward
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Ward)
        </dd>
        <dt class="col-sm-2">
            Create Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CreateDate)
        </dd>
        <dt class="col-sm-2">
            Last Login
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.LastLogin)
        </dd>
        <dt class="col-sm-2">
            Active
        </dt>
        <dd class="col-sm-10">
            @if (@Model.Customer.Active)
            {
                <p class="text-success">Active</p>
            }
            else
            {
                <p class="text-danger">Blocked</p>
            }
        </dd>        
    </dl>
</div>
<div>  
    <a asp-page="./Index" class="btn btn-success">Back to List</a>
</div>
