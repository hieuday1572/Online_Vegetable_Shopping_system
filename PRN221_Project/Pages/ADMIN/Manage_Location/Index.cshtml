@page
@model PRN221_Project.Pages.ADMIN.Manage_Location.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/ADMIN/Shared/_ADMINLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<body id="page-top">
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-primary">Locations</h1>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <p>
                    <a asp-page="Create" class="btn btn-primary">Create New</a>
                </p>
                <span>Page: @Model.CurrentPage</span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3" style="padding-left:20">
                        <form method="get">
                            <div class="input-group">
                                <input type="text" class="form-control bg-light border-0 small" placeholder="Search for name..."
                                       aria-label="Search" aria-describedby="basic-addon2" name="search">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fas fa-search fa-sm"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-3" style="padding-left:20">
                        <a asp-page="./Index" class="btn btn-primary">Reset</a>
                    </div>
                </div>
                <br />
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="table-layout:auto">
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Location[0].Type)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Location[0].NameWithType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Location[0].PathWithType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Location[0].ParentCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Location[0].Levels)
                            </th>
                            <th></th>
                        </tr>
                        <tbody>
                            @foreach (var item in Model.Location)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Type)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameWithType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PathWithType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ParentCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Levels)
                                    </td>
                                    <td>
                                        <a asp-page="./Edit" asp-route-id="@item.LocationId" class="btn btn-success">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <nav>
                        <ul class="pagination">
                            <li class="page-item"> <a class="page-link" asp-page="./Index" asp-route-id="1" asp-route-search="@ViewData["search"]">First</a> </li>
                            <li class="page-item"> <a class="page-link" asp-page="./Index" asp-route-id="@(Model.CurrentPage - 1)" asp-route-search="@ViewData["search"]">Previous</a></li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item"> <a class="page-link" asp-page="./Index" asp-route-id="@i" asp-route-search="@ViewData["search"]">@i</a> </li>
                            }
                            <li class="page-item"> <a class="page-link" asp-page="./Index" asp-route-id="@(Model.CurrentPage + 1)" asp-route-search="@ViewData["search"]">Next</a> </li>
                            <li class="page-item"> <a class="page-link" asp-page="./Index" asp-route-id="@Model.TotalPages" asp-route-search="@ViewData["search"]">Last</a> </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- End of Page Content -->
</body>
</html>

