                <input asp-for="Location.Levels" class="form-control" />
                <span asp-validation-for="Location.Levels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" /> |
                <a asp-page="./Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>