<body id="page-top">
    <!-- Main Content -->
    <div id="content">
        <h2 class="text-primary">Edit</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Role.RoleId" />
                    <div class="form-group">
                        <label asp-for="Role.RoleName" class="control-label"></label>
                        <input asp-for="Role.RoleName" class="form-control" />
                        <span asp-validation-for="Role.RoleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Role.Description" class="control-label"></label>
                        <br />
                        <textarea asp-for="Role.Description" class="summernote" rows="5"> </textarea>
                        <span asp-validation-for="Role.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" /> |
                        <a asp-page="./Index" class="btn btn-success">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- End of Main Content -->
